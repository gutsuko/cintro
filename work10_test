#include <stdio.h>
#include <stdlib.h>
int main(){
        int *p = (int*)malloc(sizeof(int)*5);
        int *q = p;
        printf("整数値を5つ入力してください。ひとつ入力するごとに改行を押してください。：\n");
        for(i = 0;i < i+5; i++){
          scanf("%d", *p);
          printf("%d\n", p);
        }
        printf("配列の中身は以下の通りです。\n");
        p = q;
        for(p; p < p+20; p++){
          printf("値：%d\n", *p);
          printf("アドレス：%d\n", p);
        }
}
